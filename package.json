{
  "name": "@monorepo/root",
  "version": "1.0.0",
  "description": "",
  "private": "true",
  "type": "module",
  "scripts": {
    "dev:Vue": "pnpm run --F @monorepo/vue-project dev",
    "dev:React": "pnpm run --F @monorepo/react-project dev",
    "dev:all": "pnpm -r --parallel --filter @monorepo/vue-project --filter @monorepo/react-project dev",
    "add:com_vue2": "git subtree add --prefix=apps/com_vue2 git@github.com:liuchanglongs/com_vue2.git master --squash",
    "fetch:com_vue2": "git fetch git@github.com:liuchanglongs/com_vue2.git master",
    "pull:com_vue2": "git subtree pull --prefix=apps/com_vue2 git@github.com:liuchanglongs/com_vue2.git master",
    "push:com_vue2": "git subtree push --prefix=apps/com_vue2 git@github.com:liuchanglongs/com_vue2.git master",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "turbo run dev --filter=./apps/** --no-daemon --verbosity=1",
    "dev1": "turbo --parallel --filter @monorepo/vue-project --filter @monorepo/react-project dev --no-daemon --verbosity=1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "turbo": "^2.5.5",
    "vite": "^7.0.6"
  }
}
